@model Towzin.Models.ProductiveDetails

@{
    ViewBag.Title = "جدید";
}

<h2>جدید</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>جزییات تولید</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">شماره سفارش</span>
            <div class="col-md-2">
                @Html.DropDownList("OrderCodeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OrderCodeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">کالا</span>
            <div class="col-md-2">
                @Html.DropDownList("PartID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PartID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">اپراتور</span>
            <div class="col-md-2">
                @Html.DropDownList("OperatorID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OperatorID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-2">کانال</span>
            <div class="col-md-2">
                @Html.DropDownList("IO", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IO, "", new { @class = "text-danger" })
                </div>
            </div>
        

        <div class="form-group">
            <span class="control-label col-md-2">از شماره سفارش</span>
            <div class="col-md-2">
                @Html.DropDownList("FromOrderCodeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FromOrderCodeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">به شماره سفارش</span>
            <div class="col-md-2">
                @Html.DropDownList("ToOrderCodeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ToOrderCodeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">شماره بچ</span>
            <div class="col-md-2">
                @Html.EditorFor(model => model.BatchNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BatchNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">شماره فرمول</span>
            <div class="col-md-2">
                @Html.EditorFor(model => model.FormoulaNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FormoulaNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">ضایعاتی؟</span>
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Waste)
                    @Html.ValidationMessageFor(model => model.Waste, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">علت ضایعات</span>
            <div class="col-md-2">
                @Html.DropDownList("LesionID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LesionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">مقدار</span>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <span class="control-label col-md-2">فعال</span>
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.State)
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره" class="btn btn-default" />   |
                @Html.ActionLink("بازگشت به لیست", "Index")
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}