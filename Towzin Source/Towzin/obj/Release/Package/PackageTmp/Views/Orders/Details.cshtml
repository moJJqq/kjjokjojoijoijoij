    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span class="control-label ">شماره سفارش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderCode)
        </dd>
        <dt>
            <span class="control-label ">وضعیت سفارش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderStatus.StatusTitle)
        </dd>
        <dt>
