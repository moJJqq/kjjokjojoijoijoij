@model Towzin.Models.OrderPart

@{
    ViewBag.Title = "جدید";
}

<h2>جدید</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>محصولات سفارش</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">شماره سفارش</span>
            <div class="col-md-2">
                @Html.DropDownList("OrderCodeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OrderCodeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">کد کالا</span>
            <div class="col-md-2">
                @Html.ValidationMessageFor(model => model.PartID, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.PartID, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">مقدار تولید به واحد اصلی</span>
            <div class="col-md-2">
                @Html.EditorFor(model => model.AmountOfProductive, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AmountOfProductive, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"> واحد سنجش فرعی</span>
            <div class="col-md-2">
                @Html.DropDownList("SubUnitID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubUnitID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">مقدار تولید به واحد فرعی</span>
            <div class="col-md-2">
                @Html.EditorFor(model => model.AmountOfSubUnitID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AmountOfSubUnitID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">نام مشتری</span>
            <div class="col-md-4">
                
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @id = "IDD" } })
                <div id="message">jj</div>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">توضیحات</span>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">فعال</span>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.State)
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
    
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("div#message").html("!"),
        $("#CustomerName").change({
            
            source: function (request, response) {
                $("div#message").html("Error on sending or receiving data!"),
                $.ajax({
                    url: "/OrderParts/Index",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {

                            $("div#message").html("Error on sending or receiving data!");

                            return { label: item.Name, value: item.Name };
                        }))
                    },
                    error: function (response) {
                        $("div#message").html("Error on sending or receiving data!");
                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>
