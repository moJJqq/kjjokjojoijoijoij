@model Towzin.Models.Lesion

@{
    ViewBag.Title = "جدید";
}

<h2>جدید</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>دلیل ضایعات</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">عنوان</span>
            <div class="col-md-4">
                @Html.EditorFor(model => model.LesionsName,"", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LesionsName, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <span class="control-label col-md-2">عنوان لاتین</span>
            <div class="col-md-4">
                @Html.EditorFor(model => model.LesionsLatinName,"", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LesionsLatinName, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
            <span class="control-label col-md-2">توضیحات</span>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">وضعیت</span>
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.State)
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="جدید" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("برگشت به لیست", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
