@model Towzin.Models.PartGroupMember

@{
    ViewBag.Title = "حذف";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>

    <div>
        <h4>کالاهای گروه</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <span>گروه کالا</span>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PartGroup.PartGroupName)
            </dd>
            <dt>
                <span>کالا</span>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Part.Name)
            </dd>
            <dt>
                <span>توضیحات</span>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                <span>فعال</span>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="حذف" class="btn btn-default" /> |
                @Html.ActionLink("بازگشت به لیست", "Index")
            </div>
        }
    </div>
