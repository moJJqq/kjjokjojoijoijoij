@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-Left" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-left">

        <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out">   خروج </span></a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-left glyphicon glyphicon-log-in" >
        <li >@Html.ActionLink("ورود", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
