@model Towzin.Models.OrderPart

@{
    ViewBag.Title = "حذف";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>محصولات سفارش</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span>شماره سفارش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.OrderCode)
        </dd>
        <dt>
            <span>نام کالا</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.Name)
        </dd>
        <dt>
            <span>کد کالا</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.PartCode)
        </dd>
        <dt>
            <span>مقدار تولید به واحد اصلی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AmountOfProductive)
        </dd>
        <dt>
            <span>واحد سنجش فرعی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit.UnitName)
        </dd>
        <dt>
            <span>مقدار تولید به واحد فرعی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AmountOfSubUnitID)
        </dd>

        <dt>
            <span>نام مشتری</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            <span>توضیحات</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <span>وضعیت</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="ذخیره" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>
