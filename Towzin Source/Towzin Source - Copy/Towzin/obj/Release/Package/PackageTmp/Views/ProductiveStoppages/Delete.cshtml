@model Towzin.Models.ProductiveStoppages

@{
    ViewBag.Title = "حذف توقفات تولید";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>توقفات تولید</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span>شماره سفارش</span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.OrderCode)
        </dd>

        <dt>
            <span>علت توقف </span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stoppages.StoppagesName)
        </dd>
        <dt>
            <span>نام اپراتور</span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Operator.OperatorName)
        </dd>

        <dt>
            <span>تاریخ شروع</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            <span>تاریخ پایان</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            <span>توضیحات</span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <span>وضعیت</span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>
