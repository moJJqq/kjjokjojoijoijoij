@model Towzin.Models.Order

@{
    ViewBag.Title = "Delete";
}



<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>سفارش</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span class="control-label ">شماره سفارش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderCode)
        </dd>
        <dt>
            <span class="control-label ">وضعیت سفارش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderStatus.StatusTitle)
        </dd>
        <dt>
            <span class="control-label ">خط تولید</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductionLine.ProductionLineName)
        </dd>
        <dt>
            <span class="control-label ">قالب</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Frame.FrameName)
        </dd>
        <dt>
            <span class="control-label ">تاریخ شروع</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            <span class="control-label ">تاریخ پایان</span>
        </dt>


        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            <span class="control-label ">توضیحات</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <span class="control-label ">وضعیت</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>






    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>

