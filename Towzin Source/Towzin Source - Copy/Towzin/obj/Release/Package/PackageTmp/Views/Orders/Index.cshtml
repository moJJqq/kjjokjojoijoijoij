
@model PagedList.IPagedList<Towzin.Models.VW_Order_Index>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}




<h2>سفارش</h2>
@using (Html.BeginForm("Index", "Orders", FormMethod.Get))
{
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="جستجو" style="font-size:large" class="glyphicon-search" />

    </p>
}
<h3>
    <i style="font-family:W_nazanin" class="glyphicon glyphicon-plus gi-5x">
        @Html.ActionLink("جدید", "Create")

    </i>
</h3>

<div class="container">


    <table class="table table-bordered">

        <tr class="alert-success" style="font-size:large">
            <th>
                <b>ردیف</b>
            </th>

            <th>
                <b> @Html.ActionLink("شماره سفارش", "Index", new { sortOrder = ViewBag.OrderCodeSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("وضعیت سفارش", "Index", new { sortOrder = ViewBag.OrderStatusSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("خط تولید", "Index", new { sortOrder = ViewBag.ProductionLineNameSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("قالب", "Index", new { sortOrder = ViewBag.FrameNameSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("سریال قالب", "Index", new { sortOrder = ViewBag.FrameSerialSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("تاریخ شروع", "Index", new { sortOrder = ViewBag.StartDateSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("تاریخ پایان", "Index", new { sortOrder = ViewBag.EndDateSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("مقدار سفارش", "Index", new { sortOrder = ViewBag.Name2SortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("مقدار سفارش به واحد فرعی", "Index", new { sortOrder = ViewBag.Name2SortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("مقدار تولید شده", "Index", new { sortOrder = ViewBag.Name2SortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("مقدار ضایعات", "Index", new { sortOrder = ViewBag.NameS2ortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("مقدار مواد مصرف", "Index", new { sortOrder = ViewBag.Nam2eSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("توضیحات", "Index", new { sortOrder = ViewBag.DescriptionSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th>
                <b> @Html.ActionLink("وضعیت", "Index", new { sortOrder = ViewBag.StateSortParm, currentFilter = ViewBag.CurrentFilter })</b>
            </th>
            <th></th>
        </tr>
        @{int rownumber = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{ rownumber++;}
                    @rownumber

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionLineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FrameSerial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOfProductive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOfSubUnitID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WasteAmont)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RowMaterialAmont)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.OrderCode }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.OrderCode }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.OrderCode })
                </td>
            </tr>
                        }


    </table>
</div>
<br />
صفحه @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) از @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))


