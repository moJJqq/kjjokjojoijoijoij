    <hr />
    <dl class="dl-horizontal">

        <dt>
            <span>شماره سفارش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.OrderCode)
        </dd>

        <dt>
            <span>کالا</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.Name)
        </dd>

        <dt>
            <span>اپراتور</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Operator.OperatorName)
        </dd>

        <dt>
            <span>کانال</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductiveState.Name)
        </dd>
        <dt>
            <span>از شماره سفارش</span>

        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromOrderCodeID)
        </dd>

        <dt>
            <span>به شماره سفارش</span>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ToOrderCodeID)
        </dd>
        <dt>
