@model Towzin.Models.ProductiveDetails

@{
    ViewBag.Title = "Delete";
}
@{
    ViewBag.Title = "حذف";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
