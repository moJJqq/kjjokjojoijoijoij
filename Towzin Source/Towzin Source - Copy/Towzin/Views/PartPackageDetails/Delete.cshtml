@model Towzin.Models.PartPackageDetail

@{
    ViewBag.Title = "Delete";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>کالاهای بسته بندی</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span>بسته بندی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Package.PackageName)
        </dd>

        <dt>
            <span>کالا</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.Name)
        </dd>
        <dt>
            <span>کد کالا</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.PartCode)
        </dd>

        <dt>
            <span>واحد سنجش</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit.UnitName)
        </dd>

        <dt>
            <span>مقدار</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

        <dt>
            <span>توضیحات</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <span>فعال</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>
