@model Towzin.Models.ProductionLineTechnicalProblem


@{
    ViewBag.Title = "حذف";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>مشکلات فنی خط</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <span>خط تولید</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductionLine.ProductionLineName)
        </dd>
        <dt>
            <span>مشکل فنی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TechnicalProblem.TechnicalProblemsName)
        </dd>
        <dt>
            <span> کالا</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.Name)
        </dd>


        <dt>
            <span>اپراتور</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Operator.OperatorName)
        </dd>

        <dt>
            <span> توضیحات مشکل فنی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescriptionTechnicalProblem)
        </dd>

        <dt>
            <span> راه حل مشکل فنی</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SolutionTechnicalProblem)
        </dd>

        <dt>
            <span> توضیحات</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <span> فعال</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>
