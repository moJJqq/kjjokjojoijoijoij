@model Towzin.Models.ProductionLineTechnicalProblem

@{
    ViewBag.Title = "مشکل فنی خط";
}

<h2>جدید</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>مشکلات فنی خط</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">خط تولید</span>
            <div class="col-md-2">
                @Html.DropDownList("ProductionLineID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductionLineID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">مشکل فنی</span>
            <div class="col-md-2">
                @Html.DropDownList("TechnicalProblemID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TechnicalProblemID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">کالا</span>
            <div class="col-md-2">
                @Html.DropDownList("PartID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PartID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">اپراتور</span>
            <div class="col-md-2">
                @Html.DropDownList("OperatorID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OperatorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">توضیحات مشکل فنی</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescriptionTechnicalProblem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescriptionTechnicalProblem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">راه حل مشکل فنی</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SolutionTechnicalProblem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SolutionTechnicalProblem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">توضیحات</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">فعال</span>
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.EditorFor(model => model.State)
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="ذخیره" class="btn btn-default" />   |
        @Html.ActionLink("بازگشت به لیست", "Index")
    </div>
</div>
</div>    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}