@model Towzin.Models.Stoppages

@{
    ViewBag.Title = "حذف";
}

<h2>حذف</h2>

<h3>آیا از حذف این مورد مطمئن هستید؟?</h3>
<div>
    <h4>دلیل توقف</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span>عنوان</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StoppagesName)
        </dd>
        <dt>
            <span>عنوان لاتین</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StoppagesLatinName)
        </dd>
 
        <dt>
            <span>توضیحات</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <span>وضعیت</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-default" /> |
            @Html.ActionLink("بازگشت", "Index")
        </div>
    }
</div>
